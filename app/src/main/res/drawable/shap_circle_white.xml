<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <stroke android:color="@android:color/darker_gray"
                    android:width="1dp"
                    />
            <padding
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp" />

            <solid android:color="#00CCCCCC" />

            <corners android:radius="@dimen/_100sdp"/>
            <size android:width="@dimen/_30sdp"
                    android:height="@dimen/_30sdp"></size>

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp" />
            <corners android:radius="@dimen/_100sdp"/>
            <size android:width="@dimen/_30sdp"
                    android:height="@dimen/_30sdp"></size>

            <solid android:color="#10CCCCCC" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp" />

            <solid android:color="#20CCCCCC" />

            <corners android:radius="@dimen/_100sdp"/>
            <size android:width="@dimen/_30sdp"
                    android:height="@dimen/_30sdp"></size>

        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />

        <corners android:radius="@dimen/_100sdp"/>

            <size android:width="@dimen/_30sdp"
                android:height="@dimen/_30sdp"></size>

        </shape>
    </item>

</layer-list>