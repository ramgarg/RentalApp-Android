<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">




    <RelativeLayout

            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:background="@drawable/button_order"
            android:layout_height="wrap_content">


        <TextView android:layout_width="match_parent"
                  android:text="Truck"
                  android:id="@+id/vehicle_name"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="#000"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Booking\nPrice "
                  android:textColor="#000"

                  android:id="@+id/booking_title"
                  android:layout_below="@+id/vehicle_name"
                  android:textSize="@dimen/_12sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/booking_price"
                  android:textColor="#000"
                  android:fontFamily="@font/bree_serif"
                  android:textSize="@dimen/_20sdp"
                  android:text="$30"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:layout_toRightOf="@+id/booking_title"
                  android:layout_below="@+id/vehicle_name"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="wrap_content"
                  android:text="Per Hour"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:layout_toRightOf="@+id/booking_price"
                  android:id="@+id/per_hour"
                  android:layout_below="@+id/vehicle_name"
                  android:textSize="@dimen/_12sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>


    </RelativeLayout>
    <LinearLayout

            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

        <TextView
                android:id="@+id/tv_view_detail"
                android:gravity="center"
                android:layout_weight=".5"
               android:background="@drawable/button_view_details"
                android:layout_centerInParent="true"
                android:textColor="#fff"
               android:text="View Details"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/bree_serif"
                android:layout_width="wrap_content"
                  android:layout_height="@dimen/_40sdp"/>
        <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_weight=".5"
                android:background="@drawable/button_remove"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:text="Remove"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/bree_serif"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"/>
    </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>