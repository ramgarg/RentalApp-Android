<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView android:layout_width="@dimen/_25sdp"
                android:src="@mipmap/home_addres"
                android:id="@+id/img_add_type"
                android:layout_height="@dimen/_25sdp"/>

        <TextView android:layout_width="wrap_content"
                android:text="@string/home"
                android:layout_toEndOf="@+id/img_add_type"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/tv_add_type"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/bree_serif"
                android:layout_height="wrap_content"/>

        <ImageView android:layout_width="@dimen/_25sdp"
                android:src="@mipmap/edit"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/img_edit"
                android:layout_height="@dimen/_25sdp"/>

        <TextView android:layout_width="wrap_content"
                android:text="@string/downtown_dubai"
                android:id="@+id/order_id"
                android:layout_below="@+id/tv_add_type"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/bree_serif"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layerType="software"
            android:background="@drawable/dotted_line_horizon"
            android:layout_height="wrap_content"/>
</LinearLayout>