<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/>

    <ScrollView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/order_truck_name"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="#000"
                    android:textSize="@dimen/_20sdp"
                    android:text="Volvo FH Truck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/order_truck_cost"
                        android:fontFamily="@font/bree_serif"
                        android:textColor="#000"
                        android:textSize="@dimen/_24sdp"
                        android:text="$200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/order_tax_included"
                        android:fontFamily="@font/bree_serif"
                        android:textColor="#000"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/_16sdp"
                        android:text="Tax Included"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/order_truck_quantity"
                            android:fontFamily="@font/bree_serif"
                            android:textColor="#000"
                            android:textSize="@dimen/_16sdp"
                            android:text="Truck Quantity - 2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginLeft="30dp"
                            android:id="@+id/tv_pay_now"
                            android:fontFamily="@font/bree_serif"
                            android:textColor="#fff"
                            android:background="@drawable/button_gradient"
                            android:textSize="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="Rate &amp; Review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                    android:id="@+id/order_truck_deliverd"
                    android:fontFamily="@font/bree_serif"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_16sdp"
                    android:text="* Delivered on 12 Dec 2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/merchant_order_coupan"
                    android:fontFamily="@font/bree_serif"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_18sdp"
                    android:text="Order ID - 10909001HTVT"
                    android:layout_width="match_parent"
                    android:drawableBottom="@drawable/dotted_line"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:weightSum="100"
                    android:orientation="horizontal">

                <ImageView android:layout_width="@dimen/_60sdp"
                        android:layout_weight="10"
                        android:id="@+id/customer_profile_pic"
                        android:src="@mipmap/profile_pic"
                        android:layout_height="@dimen/_60sdp"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="90"
                        android:layout_marginLeft="15dp"
                        android:layout_height="75dp"
                        android:orientation="vertical">

                    <TextView
                            android:text="Ajeer Mohammed"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:id="@+id/customer_user_name"
                            android:layout_width="wrap_content"
                            android:textSize="20sp"
                            android:layout_height="30dp"/>

                    <TextView
                            android:text="Customer"
                            android:textColor="@color/mdtp_transparent_black"
                            android:layout_width="100dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="35dp"
                            android:textSize="18sp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="100"
                    android:orientation="horizontal">

                <ImageView android:layout_width="@dimen/_60sdp"
                        android:layout_weight="10"
                        android:id="@+id/agent_profile_pic"
                        android:src="@mipmap/profile_pic"
                        android:layout_height="@dimen/_60sdp"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="75"
                        android:layout_marginLeft="15dp"
                        android:layout_height="75dp"
                        android:orientation="vertical">

                    <TextView
                            android:text="Ajeer Mohammed"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:id="@+id/dash_agent_user_name"
                            android:layout_width="wrap_content"
                            android:textSize="20sp"
                            android:layout_height="30dp"/>

                    <TextView
                            android:text="Agent"
                            android:textColor="@color/mdtp_transparent_black"
                            android:layout_width="100dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="35dp"
                            android:textSize="18sp"/>

                </LinearLayout>
                <ImageView android:layout_width="0dp"
                        android:layout_weight="15"
                        android:id="@+id/agent_call_button"
                        android:src="@mipmap/call"
                        android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                <ImageView android:layout_width="@dimen/_20sdp"
                        android:id="@+id/mer"
                        android:src="@drawable/check"
                        android:layout_height="@dimen/_20sdp"/>

                <TextView
                        android:text="With Driver"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="35dp"
                        android:textSize="18sp"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                    android:id="@+id/layout_start"
                    android:weightSum="1"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/calender_bg"
                    android:layout_height="@dimen/_50sdp">

                <RelativeLayout
                        android:gravity="center"
                        android:id="@+id/layout_st_date"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:id="@+id/img_calender"
                            android:layout_width="@dimen/_20sdp"
                            android:src="@mipmap/calender"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/_20sdp"/>

                    <TextView android:layout_width="wrap_content"
                            android:text="Start Date"

                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/tv_st_date"
                            android:layout_toRightOf="@+id/img_calender"
                            android:textColor="#000"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/tv_st_date_sel"
                            android:layout_below="@+id/tv_st_date"
                            android:layout_toRightOf="@+id/img_calender"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView android:layout_width="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:id="@+id/view_div"
                        android:layout_toRightOf="@+id/tv_st_date_sel"
                        android:background="@android:color/darker_gray"
                        android:layout_height="match_parent"/>
                <RelativeLayout
                        android:id="@+id/layout_st_time"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/img_time"
                            android:layout_width="@dimen/_20sdp"
                            android:src="@mipmap/time"
                            android:layout_height="@dimen/_20sdp"/>

                    <TextView android:layout_width="wrap_content"
                            android:text="Start Time"

                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/tv_st_time"
                            android:layout_toRightOf="@+id/img_time"
                            android:textColor="#000"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/tv_st_time_sel"
                            android:layout_below="@+id/tv_st_time"
                            android:layout_toRightOf="@+id/img_time"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                    android:id="@+id/layout_end"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/calender_bg"
                    android:layout_below="@+id/layout_start"
                    android:layout_height="@dimen/_50sdp">

                <RelativeLayout
                        android:gravity="center"
                        android:id="@+id/layout_end_date"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:id="@+id/img_en_calender"
                            android:layout_width="@dimen/_20sdp"
                            android:src="@mipmap/calender"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/_20sdp"/>

                    <TextView android:layout_width="wrap_content"
                            android:text="End Date"

                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/tv_end_date"
                            android:layout_toRightOf="@+id/img_en_calender"
                            android:textColor="#000"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/tv_end_date_sel"
                            android:layout_below="@+id/tv_end_date"
                            android:layout_toRightOf="@+id/img_en_calender"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView android:layout_width="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:id="@+id/view_div_2"
                        android:layout_toRightOf="@+id/tv_st_date_sel"
                        android:background="@android:color/darker_gray"
                        android:layout_height="match_parent"/>
                <RelativeLayout
                        android:id="@+id/layout_end_time"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/img_end_time"
                            android:layout_width="@dimen/_20sdp"
                            android:src="@mipmap/time"
                            android:layout_height="@dimen/_20sdp"/>

                    <TextView android:layout_width="wrap_content"
                            android:text="End Time"

                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/tv_end_time"
                            android:layout_toRightOf="@+id/img_end_time"
                            android:textColor="#000"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/tv_end_time_sel"
                            android:layout_below="@+id/tv_end_time"
                            android:layout_toRightOf="@+id/img_end_time"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>


            </LinearLayout>
            <TextView android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/tv_work_title"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="#000"
                    android:text="Work Location"
                    android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/tv_work_location"
                    android:fontFamily="@font/bree_serif"
                    android:text="Work Location kjffaslakjak"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>