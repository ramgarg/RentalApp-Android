<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

    <ImageView android:layout_width="@dimen/_50sdp"
            android:id="@+id/customer_profile_pic"
            android:layout_weight="10"
            android:src="@mipmap/profile_pic"
            android:layout_height="@dimen/_50sdp"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_weight="75"
            android:layout_height="@dimen/_65sdp"
            android:orientation="vertical">

        <TextView
                android:text="@string/ajeer_mohammed"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/customer_user_name"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:layout_height="@dimen/_25sdp"/>

        <TextView
                android:text="@string/agent"
                android:id="@+id/tv_merchant_tag"
                android:textColor="@color/mdtp_transparent_black"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_20sdp"
                android:textSize="@dimen/_12sdp"/>


    </LinearLayout>
    <ImageView
            android:id="@+id/img_agent_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:src="@mipmap/call"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            />

</LinearLayout>

