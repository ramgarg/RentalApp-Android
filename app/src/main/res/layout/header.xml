<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/layout_header"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView android:layout_width="@dimen/_80sdp"
               android:id="@+id/profile_img_menu"
               android:src="@mipmap/profile_pic"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_30sdp"
               android:layout_height="@dimen/_80sdp"/>

    <TextView
            android:text="Bilad Al"
            android:fontFamily="@font/bree_serif"
            android:textColor="#000"
            android:id="@+id/user_name_menu"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
              android:layout_below="@id/profile_img_menu"
              android:layout_height="wrap_content"/>
    <TextView
            android:text="Customer"

            android:id="@+id/user_type_menu"
            android:fontFamily="@font/bree_serif"
            android:textColor="#0f7e31"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_below="@id/user_name_menu"
            android:layout_height="wrap_content"/>
    <ImageView android:layout_width="@dimen/_30sdp"
               android:id="@+id/edit_profile_menu"
               android:src="@mipmap/edit"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_below="@id/user_name_menu"
               android:layout_alignParentRight="true"
               android:layout_height="@dimen/_30sdp"/>

</RelativeLayout>