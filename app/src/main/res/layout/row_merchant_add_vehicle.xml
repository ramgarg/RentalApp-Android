<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            android:background="@drawable/calender_bg"
            android:id="@+id/vehicle_card_view"
            android:layout_centerInParent="true"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">

            <TextView
                    android:id="@+id/tv_agent_name"
                    style="@style/AgentBoldTextCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="@string/vehicle"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:id="@+id/item_selected_pic"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/truck"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_agent_name" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <Button
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:elevation="@dimen/_10sdp"
            android:textAllCaps="false"
            android:text="@string/add"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_gradient"
            android:layout_marginTop="@dimen/-10sdp"
            android:layout_below="@+id/vehicle_card_view">

    </Button>
</RelativeLayout>