<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="@dimen/_10sdp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout

            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:background="@drawable/button_order"
            android:layout_height="@dimen/_120sdp">


        <TextView android:layout_width="match_parent"
                  android:text="Truck"
                  android:id="@+id/vehicle_name"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="#000"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:text="Booking Price $20 per hour"
                  android:id="@+id/vehicle_price"
                  android:layout_below="@+id/vehicle_name"
                  android:textSize="@dimen/_12sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_below="@+id/vehicle_price"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="Truck Quantity -2"
                      android:id="@+id/vehicle_quantity"
                      android:textColor="#000"
android:layout_centerVertical="true"
                      android:textSize="@dimen/_12sdp"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="Payment Pending"
                      android:paddingRight="@dimen/_10sdp"
android:paddingLeft="@dimen/_10sdp"
                      android:background="@drawable/payment_status"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:id="@+id/payment_status"
                      android:textColor="#fff"
                      android:layout_alignParentRight="true"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="@dimen/_20sdp"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout

            android:layout_width="match_parent"
            android:background="@drawable/button_order_id"
            android:layout_height="@dimen/_50sdp">

        <TextView
                android:text="Order ID- 109090133VFHT"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/bree_serif"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>