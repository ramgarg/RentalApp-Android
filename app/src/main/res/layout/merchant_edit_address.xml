<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout android:layout_width="match_parent"
            android:id="@+id/merchant_frame_map"

            android:background="@color/colorAccent"
            android:layout_height="@dimen/_250sdp">

        <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".customer.myaddress.view.AddNewAddressActivity" />
    </FrameLayout>


    <include layout="@layout/toolbar"
            />

    <ScrollView android:layout_width="match_parent"
            android:layout_above="@+id/merchant_btn_save"
            android:layout_below="@+id/merchant_frame_map"
            android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/merchant_frame_map"
                android:layout_height="match_parent">


            <LinearLayout
                    android:id="@+id/merchant_layout_curret_address"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"

                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/merchant_current_address"
                        android:layout_width="@dimen/_250sdp"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/bree_serif"
                        android:textColor="#000"
                        android:maxLines="2"
                        android:text="Downtown, Dubai,United Arab Emirates"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content"/>
                <ImageView android:layout_width="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@mipmap/location_pick_address"
                        android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/merchant_layout_ed_address"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_below="@+id/merchant_layout_curret_address"
                    android:hint="Address Line1"
                    android:textColor="#000"

                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:textColorHint="@android:color/darker_gray"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/merchant_ed_address"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="textEmailAddress"
                        android:nextFocusDown="@id/ed_password"
                        android:fontFamily="@font/bree_serif"
                        android:layout_height="@dimen/_40sdp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout

                    android:id="@+id/layout_address_as"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_below="@+id/merchant_layout_ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:id="@+id/merchant_address_save_as"
                        android:fontFamily="@font/bree_serif"
                        android:textSize="@dimen/_15sdp"
                        android:text="Save As"
                        android:layout_height="wrap_content"/>


                <LinearLayout
                        android:layout_below="@+id/merchant_address_save_as"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                    <TextView android:layout_width="@dimen/_80sdp"
                            android:text="Home"

                            android:fontFamily="@font/bree_serif"

                            android:id="@+id/merchant_btn_inactive"
                            android:textSize="@dimen/_12sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:paddingRight="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:background="@drawable/rounded_corner_gray"
                            android:drawableLeft="@mipmap/home_addres_ss"
                            android:layout_height="@dimen/_30sdp"/>
                    <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/merchant_btn_active"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content">

                        <TextView android:layout_width="wrap_content"
                                android:text="Home"
                                android:fontFamily="@font/bree_serif"

                                android:textSize="@dimen/_10sdp"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:background="@drawable/shadow"
                                android:drawableLeft="@mipmap/home_addres_ss"
                                android:layout_height="@dimen/_30sdp"/>
                        <ImageView
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/green_check"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"/>
                    </RelativeLayout>

                    <TextView android:layout_width="@dimen/_80sdp"
                            android:text="Work"
                            android:gravity="center"
                            android:id="@+id/btn_agent_inactive"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/bree_serif"

                            android:paddingLeft="@dimen/_5sdp"
                            android:drawableLeft="@mipmap/work_address_ss"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/rounded_corner_gray"
                            android:layout_height="@dimen/_30sdp"/>


                    <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/btn_agent_active"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content">

                        <TextView
                                android:gravity="center"
                                android:layout_width="@dimen/_70sdp"
                                android:text="Work"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:fontFamily="@font/bree_serif"

                                android:drawableLeft="@mipmap/work_address_ss"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/shadow"
                                android:layout_height="@dimen/_30sdp"/>
                        <ImageView
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/green_check"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"/>
                    </RelativeLayout>



                    <TextView android:layout_width="@dimen/_80sdp"
                            android:text="Other"
                            android:gravity="center"
                            android:fontFamily="@font/bree_serif"

                            android:id="@+id/btn_merchant_inactive"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:drawableLeft="@mipmap/order_address_ss"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:background="@drawable/rounded_corner_gray"
                            android:layout_height="@dimen/_30sdp"/>

                    <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/btn_merchant_active"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content">

                        <TextView android:layout_width="wrap_content"
                                android:text="Other"
                                android:gravity="center"
                                android:fontFamily="@font/bree_serif"

                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_12sdp"
                                android:drawableLeft="@mipmap/order_address_ss"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:background="@drawable/shadow"
                                android:layout_height="@dimen/_30sdp"/>

                        <ImageView
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/green_check"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:id="@+id/layout_update"
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/_40sdp">

        <Button
                android:textColor="#fff"
                android:fontFamily="@font/bree_serif"
                android:textSize="@dimen/_15sdp"
                android:background="@color/colorAccent"
                android:textAllCaps="false"
                android:text="Delete"
                android:layout_weight=".5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <Button
                android:textColor="#fff"
                android:fontFamily="@font/bree_serif"
                android:textSize="@dimen/_15sdp"
                android:background="@color/colorPrimary"
                android:text="Update"
                android:textAllCaps="false"
                android:layout_weight=".5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>