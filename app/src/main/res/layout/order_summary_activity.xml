<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar"
             android:id="@+id/toolbar"/>

    <ScrollView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_vehicle_name"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:text="@string/orderid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="@string/total_price"
                      android:textColor="@color/black"
                      android:id="@+id/booking_title"
                      android:layout_below="@+id/tv_vehicle_name"
                      android:textSize="@dimen/_12sdp"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/booking_price"
                      android:textColor="@color/black"
                      android:fontFamily="@font/bree_serif"
                      android:textSize="@dimen/_20sdp"
                      android:text="@string/booking_price"
                      android:layout_marginStart="@dimen/_5sdp"
                      android:layout_toEndOf="@+id/booking_title"
                      android:layout_below="@+id/tv_vehicle_name"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="wrap_content"
                      android:text="@string/per_hour"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_5sdp"
                      android:layout_toEndOf="@+id/booking_price"
                      android:id="@+id/per_hour"
                      android:layout_below="@+id/tv_vehicle_name"
                      android:textSize="@dimen/_12sdp"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tv_vehicle_name"
                    android:id="@+id/tv_view_history"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/view_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_below="@+id/per_hour"
                    android:id="@+id/tv_pending_amount"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:text="@string/pending_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/booking_price"
                    android:id="@+id/tv_pay_now"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/white"
                    android:background="@drawable/button_gradient"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/pay_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_below="@+id/per_hour"
                    android:id="@+id/tv_order_id"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/_15sdp"
                    android:text="@string/orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/tv_pending_amount"
                    android:id="@+id/tv_truck_quantity"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:text="@string/truck_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_delver_date"
                      android:visibility="gone"
                      android:text="@string/delivered_on"
                      android:textSize="@dimen/_15sdp"
                      android:textColor="@color/text_blue"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:fontFamily="@font/bree_serif"
                      android:layout_below="@+id/tv_truck_quantity"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_days"
                      android:text="@string/_14_days"
                      android:visibility="gone"
                      android:textSize="@dimen/_15sdp"
                      android:textColor="@color/text_blue"
                      android:drawableStart="@mipmap/calender"
            android:drawablePadding="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/bree_serif"
            android:layout_below="@+id/tv_delver_date"
            android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent"
                      android:layout_below="@+id/tv_days"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_15sdp"
                      android:id="@+id/tv_coupon"
                      android:visibility="gone"
                      android:fontFamily="@font/bree_serif"
                      android:text="@string/_9995hh"
                      android:drawablePadding="@dimen/_15sdp"
                      android:drawableStart="@mipmap/coupen"
                      android:layout_height="wrap_content"/>

            <ImageView android:layout_width="@dimen/_20sdp"
                      android:layout_below="@+id/tv_days"
                      android:layout_marginTop="@dimen/_10sdp"
                     android:src="@mipmap/green_check"
                       android:visibility="gone"
                       android:layout_marginEnd="@dimen/_20sdp"
                      android:id="@+id/coupon_applied"
                      android:layout_alignParentEnd="true"
                      android:layout_height="@dimen/_20sdp"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/view_1"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layerType="software"
                      android:background="@drawable/dotted_line"
                      android:layout_below="@+id/tv_coupon"
                      android:layout_height="@dimen/_1sdp"/>

            <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/view_1"
                    android:id="@+id/tv_mainteanance"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:text="@string/for_maintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_agent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@+id/tv_mainteanance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/layout_driver"
                          android:layout_below="@+id/rec_agent"
                          android:layout_marginTop="@dimen/_10sdp"
                          android:layout_height="@dimen/_30sdp">
                <CheckBox android:layout_width="@dimen/_20sdp"
                          android:textColor="@color/black"
                          android:id="@+id/checkbox_with_driver"
                          android:fontFamily="@font/bree_serif"
                          android:textSize="@dimen/_15sdp"
                          android:checked="true"
                          android:background="@drawable/custom_checkbox"
                          android:button="@null"
                          android:layout_height="@dimen/_20sdp"/>

                <TextView
                        android:fontFamily="@font/bree_serif"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:text="@string/with_driver"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/layout_start"
                          android:weightSum="1"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:background="@drawable/calender_bg"
                          android:layout_below="@+id/layout_driver"
                          android:layout_height="@dimen/_50sdp">

                <RelativeLayout
                        android:gravity="center"
                        android:id="@+id/layout_st_date"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:id="@+id/img_calender"
                            android:layout_width="@dimen/_20sdp"
                            android:src="@mipmap/calender"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/_20sdp"/>

                    <TextView android:layout_width="wrap_content"
                              android:text="@string/start_date"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:id="@+id/tv_st_date"
                              android:layout_toEndOf="@+id/img_calender"
                              android:textColor="@color/black"
                              android:fontFamily="@font/bree_serif"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:id="@+id/tv_st_date_sel"
                              android:layout_below="@+id/tv_st_date"
                              android:layout_toEndOf="@+id/img_calender"
                              android:fontFamily="@font/bree_serif"
                              android:layout_height="wrap_content"/>

                </RelativeLayout>
                <TextView android:layout_width="@dimen/_1sdp"
                          android:layout_marginTop="@dimen/_5sdp"
                          android:layout_marginBottom="@dimen/_5sdp"
                          android:id="@+id/view_div"
                          android:background="@android:color/darker_gray"
                          android:layout_height="match_parent"/>

                <RelativeLayout
                        android:id="@+id/layout_st_time"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/img_time"
                            android:layout_width="@dimen/_20sdp"
                            android:src="@mipmap/time"
                            android:layout_height="@dimen/_20sdp"/>

                    <TextView android:layout_width="wrap_content"
                              android:text="@string/start_time"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:id="@+id/tv_st_time"
                              android:layout_toEndOf="@+id/img_time"
                              android:textColor="@color/black"
                              android:fontFamily="@font/bree_serif"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:id="@+id/tv_st_time_sel"
                              android:layout_below="@+id/tv_st_time"
                              android:layout_toEndOf="@+id/img_time"
                              android:fontFamily="@font/bree_serif"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/layout_end"
                          android:weightSum="1"
                          android:layout_marginTop="@dimen/_10sdp"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:background="@drawable/calender_bg"
                          android:layout_below="@+id/layout_start"
                          android:layout_height="@dimen/_50sdp">

                <RelativeLayout
                        android:gravity="center"
                        android:id="@+id/layout_end_date"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:id="@+id/img_en_calender"
                            android:layout_width="@dimen/_20sdp"
                            android:src="@mipmap/calender"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/_20sdp"/>

                    <TextView android:layout_width="wrap_content"
                              android:text="@string/end_date"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:id="@+id/tv_end_date"
                              android:layout_toEndOf="@+id/img_en_calender"
                              android:textColor="@color/black"
                              android:fontFamily="@font/bree_serif"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:id="@+id/tv_end_date_sel"
                              android:layout_below="@+id/tv_end_date"
                              android:layout_toEndOf="@+id/img_en_calender"
                              android:fontFamily="@font/bree_serif"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>

                <TextView android:layout_width="@dimen/_1sdp"
                          android:layout_marginTop="@dimen/_5sdp"
                          android:layout_marginBottom="@dimen/_5sdp"
                          android:id="@+id/view_div_2"
                          android:background="@android:color/darker_gray"
                          android:layout_height="match_parent"/>

                <RelativeLayout
                        android:id="@+id/layout_end_time"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/img_end_time"
                            android:layout_width="@dimen/_20sdp"
                            android:src="@mipmap/time"
                            android:layout_height="@dimen/_20sdp"/>

                    <TextView android:layout_width="wrap_content"
                              android:text="@string/end_time"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:id="@+id/tv_end_time"
                              android:layout_toEndOf="@+id/img_end_time"
                              android:textColor="@color/black"
                              android:fontFamily="@font/bree_serif"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:id="@+id/tv_end_time_sel"
                              android:layout_below="@+id/tv_end_time"
                              android:layout_toEndOf="@+id/img_end_time"
                              android:fontFamily="@font/bree_serif"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>


            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_below="@+id/layout_end"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_15sdp"
                      android:id="@+id/tv_work_title"
                      android:fontFamily="@font/bree_serif"
                      android:textColor="@color/black"
                      android:text="@string/work_location"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:layout_below="@+id/tv_work_title"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_15sdp"
                      android:id="@+id/tv_work_location"
                      android:fontFamily="@font/bree_serif"
                      android:text="@string/work_location"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent"
                      android:layout_below="@+id/tv_work_location"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_15sdp"
                      android:visibility="gone"
                      android:id="@+id/tv_happy"
                      android:fontFamily="@font/bree_serif"
                      android:textColor="@color/black"
                      android:text="@string/happy_with_the_service"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:layout_below="@+id/tv_happy"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_15sdp"
                      android:visibility="gone"
                      android:id="@+id/tv_happy_with"
                      android:textColor="@color/black"
                      android:fontFamily="@font/bree_serif"
                      android:text="@string/booking_price"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_below="@+id/tv_happy"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_15sdp"
                      android:visibility="gone"
                      android:id="@+id/tv_give_tip"
                      android:paddingLeft="@dimen/_5sdp"
                      android:paddingRight="@dimen/_5sdp"
                      android:layout_alignParentEnd="true"
                      android:textColor="@color/white"
                      android:fontFamily="@font/bree_serif"
                      android:text="@string/give_a_tip"
                      android:background="@drawable/payment_status"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>