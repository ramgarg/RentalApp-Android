<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar"
             android:id="@+id/toolbar"/>

    <ScrollView
            android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
            android:layout_margin="@dimen/_10sdp"

            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView

                android:id="@+id/tv_order_id"
                android:fontFamily="@font/bree_serif"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:text="Order ID - 76436778787877"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/tv_order_id"
                android:id="@+id/tv_total_price"
                android:fontFamily="@font/bree_serif"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:text="Total Price $220"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_order_id"
                android:id="@+id/tv_view_history"
                android:fontFamily="@font/bree_serif"
                android:textColor="#1c7cf7"
                android:textSize="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="View History"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/tv_total_price"
                android:id="@+id/tv_pending_amount"
                android:fontFamily="@font/bree_serif"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:text="Pending Amount $170"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_total_price"
                android:id="@+id/tv_pay_now"
                android:paddingLeft="@dimen/_5sdp"
               android:paddingRight="@dimen/_5sdp"
                android:fontFamily="@font/bree_serif"
                android:textColor="#fff"
                android:background="@drawable/button_gradient"
                android:textSize="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Pay Now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/tv_pending_amount"
                android:id="@+id/tv_truck_quantity"
                android:fontFamily="@font/bree_serif"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:text="Truck Quantity - 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:id="@+id/view_1"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_below="@+id/tv_truck_quantity"
                  android:background="@android:color/darker_gray"
                  android:layout_height="@dimen/_1sdp"/>

        <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/view_1"
                android:id="@+id/tv_mainteanance"
                android:fontFamily="@font/bree_serif"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:text="For Maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_agent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/tv_mainteanance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">
        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="top"
                      android:id="@+id/layout_driver"
                      android:layout_below="@+id/rec_agent"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_height="@dimen/_30sdp">
            <CheckBox android:layout_width="@dimen/_20sdp"
                      android:textColor="#000"
                      android:id="@+id/checkbox_with_driver"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:fontFamily="@font/bree_serif"
                      android:textSize="@dimen/_15sdp"
                      android:background="@drawable/custom_checkbox"
                      android:button="@null"
                      android:layout_height="@dimen/_20sdp"/>

            <TextView
                    android:fontFamily="@font/bree_serif"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="#000"
                    android:text="With Driver"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:id="@+id/layout_start"
                      android:weightSum="1"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:background="@drawable/calender_bg"
                      android:layout_below="@+id/layout_driver"
                      android:layout_height="@dimen/_50sdp">

            <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/layout_st_date"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <ImageView
                        android:id="@+id/img_calender"
                        android:layout_width="@dimen/_20sdp"
                        android:src="@mipmap/calender"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/_20sdp"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Start Date"

                          android:layout_marginLeft="@dimen/_10sdp"
                          android:id="@+id/tv_st_date"
                          android:layout_toRightOf="@+id/img_calender"
                          android:textColor="#000"
                          android:fontFamily="@font/bree_serif"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="12 Nov 2019"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:id="@+id/tv_st_date_sel"
                          android:layout_below="@+id/tv_st_date"
                          android:layout_toRightOf="@+id/img_calender"
                          android:fontFamily="@font/bree_serif"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView android:layout_width="@dimen/_1sdp"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:id="@+id/view_div"
                      android:layout_toRightOf="@+id/tv_st_date_sel"
                      android:background="@android:color/darker_gray"
                      android:layout_height="match_parent"/>
            <RelativeLayout
                    android:id="@+id/layout_st_time"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/img_time"
                        android:layout_width="@dimen/_20sdp"
                        android:src="@mipmap/time"
                        android:layout_height="@dimen/_20sdp"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Start Time"

                          android:layout_marginLeft="@dimen/_10sdp"
                          android:id="@+id/tv_st_time"
                          android:layout_toRightOf="@+id/img_time"
                          android:textColor="#000"
                          android:fontFamily="@font/bree_serif"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="11:00am"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:id="@+id/tv_st_time_sel"
                          android:layout_below="@+id/tv_st_time"
                          android:layout_toRightOf="@+id/img_time"
                          android:fontFamily="@font/bree_serif"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:id="@+id/layout_end"
                      android:weightSum="1"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:background="@drawable/calender_bg"
                      android:layout_below="@+id/layout_start"
                      android:layout_height="@dimen/_50sdp">

            <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/layout_end_date"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <ImageView
                        android:id="@+id/img_en_calender"
                        android:layout_width="@dimen/_20sdp"
                        android:src="@mipmap/calender"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/_20sdp"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Start Date"

                          android:layout_marginLeft="@dimen/_10sdp"
                          android:id="@+id/tv_end_date"
                          android:layout_toRightOf="@+id/img_en_calender"
                          android:textColor="#000"
                          android:fontFamily="@font/bree_serif"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="12 Nov 2019"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:id="@+id/tv_end_date_sel"
                          android:layout_below="@+id/tv_end_date"
                          android:layout_toRightOf="@+id/img_en_calender"
                          android:fontFamily="@font/bree_serif"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView android:layout_width="@dimen/_1sdp"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:id="@+id/view_div_2"
                      android:layout_toRightOf="@+id/tv_st_date_sel"
                      android:background="@android:color/darker_gray"
                      android:layout_height="match_parent"/>
            <RelativeLayout
                    android:id="@+id/layout_end_time"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/img_end_time"
                        android:layout_width="@dimen/_20sdp"
                        android:src="@mipmap/time"
                        android:layout_height="@dimen/_20sdp"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Start Time"

                          android:layout_marginLeft="@dimen/_10sdp"
                          android:id="@+id/tv_end_time"
                          android:layout_toRightOf="@+id/img_end_time"
                          android:textColor="#000"
                          android:fontFamily="@font/bree_serif"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="11:00am"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:id="@+id/tv_end_time_sel"
                          android:layout_below="@+id/tv_end_time"
                          android:layout_toRightOf="@+id/img_end_time"
                          android:fontFamily="@font/bree_serif"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>


        </LinearLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_below="@+id/layout_end"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:textSize="@dimen/_15sdp"
                  android:id="@+id/tv_work_title"
                  android:fontFamily="@font/bree_serif"
                  android:textColor="#000"
                  android:text="Work Location"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:layout_below="@+id/tv_work_title"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:textSize="@dimen/_15sdp"
                  android:id="@+id/tv_work_location"
                  android:fontFamily="@font/bree_serif"
                  android:text="Work Location kjffaslakjak"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>
</ScrollView>
        </RelativeLayout>