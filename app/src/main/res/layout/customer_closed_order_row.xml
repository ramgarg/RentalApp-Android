<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                      android:layout_height="wrap_content">
    <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:background="@drawable/button_order"
            android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:text="@string/truck"
                  android:id="@+id/vehicle_name"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="@color/black"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="@string/total_price"
                  android:textColor="@color/black"
                  android:id="@+id/booking_title"
                  android:layout_below="@+id/vehicle_name"
                  android:textSize="@dimen/_12sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/booking_price"
                  android:textColor="@color/black"
                  android:fontFamily="@font/bree_serif"
                  android:textSize="@dimen/_20sdp"
                  android:text="@string/booking_price"
                  android:layout_marginStart="@dimen/_5sdp"
                  android:layout_toEndOf="@+id/booking_title"
                  android:layout_below="@+id/vehicle_name"
                  android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_below="@+id/booking_price"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="@string/truck_quantity"
                      android:id="@+id/vehicle_quantity"
                      android:textColor="@color/black"
                    android:layout_centerVertical="true"
                      android:textSize="@dimen/_12sdp"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="@string/rate_amp_review"
                      android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                      android:background="@drawable/button_gradient"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:id="@+id/tv_rate"
                      android:textColor="@color/white"
                      android:layout_alignParentEnd="true"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="@dimen/_20sdp"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout

            android:layout_width="match_parent"
            android:background="@drawable/button_order_id"
            android:layout_height="@dimen/_50sdp">

        <TextView
                android:text="@string/orderid"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/bree_serif"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>