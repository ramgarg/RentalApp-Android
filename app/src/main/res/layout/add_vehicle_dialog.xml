<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_10sdp"
        >
<!--top view with text view and close image-->
        <TextView
                android:id="@+id/top_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:text="@string/select_availability"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:layout_alignParentTop="true"

                >
        </TextView>
    <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/close" />

<!--day wise layout-->
    <LinearLayout
            android:id="@+id/lnr_day_wise"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/top_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7"
            >

        <TextView

                android:text="Sun"
                style="@style/sunmonday"
                />
        <TextView
                android:text="Mon"
                style="@style/sunmonday"
                />
        <TextView
                android:text="Tue"
                style="@style/sunmonday"
                />
        <TextView
                android:text="Wed"
                style="@style/sunmonday"
                />
        <TextView
                android:text="Thu"
                style="@style/sunmonday"
                android:drawableRight="@mipmap/green_check"

                />
        <TextView
                android:text="Fri"
                style="@style/sunmonday"
                />
        <TextView
                android:text="Sat"
                style="@style/sunmonday"
                />
    </LinearLayout>


