<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_payment_history"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="@dimen/_30sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/bree_serif"
                android:textSize="@dimen/_18sdp"
                android:text="@string/select_availability">

        </TextView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="100"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:layout_height="@dimen/_60sdp">
            <TextView
                    android:id="@+id/btn_dialog_sun_inactive"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:layout_height="@dimen/_50sdp"
                    android:textColor="@color/black"
                    android:shadowColor="@color/mdtp_transparent_black"
                    android:background="@drawable/round_back"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/sun">

            </TextView>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:id="@+id/btn_dialog_sun_active"
                    android:visibility="gone"
                    android:layout_height="@dimen/_50sdp"
                    android:textColor="@color/black"
                    android:drawableRight="@mipmap/green_check"
                    android:shadowColor="@color/mdtp_transparent_black"
                    android:background="@drawable/round_back"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/sun">
            </TextView>

            </LinearLayout>
            <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:visibility="visible"
                    android:layout_height="@dimen/_60sdp">
            <TextView
                    android:id="@+id/btn_dialog_mon_inactive"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:layout_height="@dimen/_50sdp"
                    android:textColor="@color/black"
                    android:shadowColor="@color/mdtp_transparent_black"
                    android:background="@drawable/round_back"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/mon">

            </TextView>

                    <TextView
                            android:id="@+id/btn_dialog_mon_active"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_weight="35"
                            android:layout_height="@dimen/_50sdp"
                            android:textColor="@color/black"
                            android:drawableRight="@mipmap/green_check"
                            android:shadowColor="@color/mdtp_transparent_black"
                            android:background="@drawable/round_back"
                            android:fontFamily="@font/bree_serif"
                            android:textSize="@dimen/_18sdp"
                            android:text="@string/mon">
                    </TextView>

            </LinearLayout>
                    <LinearLayout

                            android:layout_width="0dp"
                            android:layout_weight="35"
                            android:layout_height="@dimen/_60sdp">
                        <TextView
                                android:id="@+id/btn_dialog_tue_inactive"
                                android:layout_width="0dp"
                                android:layout_weight="35"
                                android:layout_height="@dimen/_50sdp"
                                android:textColor="@color/black"
                                android:shadowColor="@color/mdtp_transparent_black"
                                android:fontFamily="@font/bree_serif"
                                android:textSize="@dimen/_18sdp"
                                android:text="@string/tue">
                        </TextView>
                        <TextView
                                android:id="@+id/btn_dialog_tue_active"
                                android:visibility="gone"
                                android:layout_width="0dp"
                                android:layout_weight="35"
                                android:layout_height="@dimen/_50sdp"
                                android:textColor="@color/black"
                                android:drawableRight="@mipmap/green_check"
                                android:shadowColor="@color/mdtp_transparent_black"
                                android:background="@drawable/round_back"
                                android:fontFamily="@font/bree_serif"
                                android:textSize="@dimen/_18sdp"
                                android:text="@string/tue">
                        </TextView>

                </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="35"
                            android:visibility="visible"
                            android:layout_height="@dimen/_60sdp">
            <TextView

                    android:id="@+id/btn_dialog_wed_inactive"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:layout_height="@dimen/_50sdp"
                    android:textColor="@color/black"
                    android:shadowColor="@color/mdtp_transparent_black"
                    android:background="@drawable/round_back"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/wed">

            </TextView>

                            <TextView

                                    android:id="@+id/btn_dialog_wed_active"
                                    android:visibility="gone"
                                    android:layout_width="0dp"
                                    android:layout_weight="35"
                                    android:layout_height="@dimen/_50sdp"
                                    android:textColor="@color/black"
                                    android:drawableRight="@mipmap/green_check"
                                    android:shadowColor="@color/mdtp_transparent_black"
                                    android:background="@drawable/round_back"
                                    android:fontFamily="@font/bree_serif"
                                    android:textSize="@dimen/_18sdp"
                                    android:text="@string/wed">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="35"
                                android:visibility="visible"
                                android:layout_height="@dimen/_60sdp">
            <TextView

                    android:id="@+id/btn_dialog_thu_inactive"
                    android:layout_width="0dp"
                    android:shadowColor="@color/mdtp_transparent_black"
                    android:background="@drawable/round_back"
                    android:layout_weight="35"
                    android:textColor="@color/black"
                    android:layout_height="@dimen/_50sdp"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/thu">

            </TextView>

                                <TextView

                                        android:id="@+id/btn_dialog_thu_active"
                                        android:layout_width="0dp"
                                        android:visibility="gone"
                                        android:layout_weight="35"
                                        android:layout_height="@dimen/_50sdp"
                                        android:textColor="@color/black"
                                        android:drawableRight="@mipmap/green_check"
                                        android:shadowColor="@color/mdtp_transparent_black"
                                        android:background="@drawable/round_back"
                                        android:fontFamily="@font/bree_serif"
                                        android:textSize="@dimen/_18sdp"
                                        android:text="@string/thu">
                                </TextView>


                        </LinearLayout>
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="35"
                                    android:visibility="visible"
                                    android:layout_height="@dimen/_60sdp">
            <TextView

                    android:id="@+id/btn_dialog_fri_inactive"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="35"
                    android:textColor="@color/black"
                    android:shadowColor="@color/mdtp_transparent_black"
                    android:background="@drawable/round_back"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/fri">


            </TextView>

                                    <TextView

                                            android:id="@+id/btn_dialog_fri_active"
                                            android:visibility="gone"
                                            android:layout_width="0dp"
                                            android:layout_weight="35"
                                            android:layout_height="@dimen/_50sdp"
                                            android:textColor="@color/black"
                                            android:drawableRight="@mipmap/green_check"
                                            android:shadowColor="@color/mdtp_transparent_black"
                                            android:background="@drawable/round_back"
                                            android:fontFamily="@font/bree_serif"
                                            android:textSize="@dimen/_18sdp"
                                            android:text="@string/fri">
                                    </TextView>


                            </LinearLayout>
                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="35"
                                        android:visibility="visible"
                                        android:layout_height="@dimen/_60sdp">
            <TextView

                    android:id="@+id/btn_dialog_sat_inactive"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="35"
                    android:shadowColor="@color/mdtp_transparent_black"
                    android:background="@drawable/round_back"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/sat">

            </TextView>

                                        <TextView

                                                android:id="@+id/btn_dialog_sat_active"
                                                android:visibility="gone"
                                                android:layout_width="0dp"
                                                android:layout_weight="35"
                                                android:layout_height="@dimen/_50sdp"
                                                android:textColor="@color/black"
                                                android:drawableRight="@mipmap/green_check"
                                                android:shadowColor="@color/mdtp_transparent_black"
                                                android:background="@drawable/round_back"
                                                android:fontFamily="@font/bree_serif"
                                                android:textSize="@dimen/_18sdp"
                                                android:text="@string/sat">
                                        </TextView>

                                </LinearLayout>

        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout_truck_quantity"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_below="@+id/layout_end"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/truck_quantity"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bree_serif"
                    android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                <ImageView android:layout_width="@dimen/_25sdp"
                        android:id="@+id/minus_quantity"
                        android:src="@mipmap/minus"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/button_add"
                        android:layout_height="@dimen/_25sdp"/>

                <TextView
                        android:id="@+id/item_quantity"
                        android:text="@string/one"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bree_serif"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/itemquantity_bg"
                        android:layout_height="@dimen/_25sdp"/>
                <ImageView android:layout_width="@dimen/_25sdp"
                        android:src="@mipmap/plus"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/add_quantity"
                        android:background="@drawable/button_minus"
                        android:layout_height="@dimen/_25sdp"/>

            </LinearLayout>


        </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="100"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="50"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:text="@string/booking_price_text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_20sdp">

            </TextView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:text="@string/booking_price"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="@dimen/_20sdp">

            </TextView>
        </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="@dimen/_100sdp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:text="@string/fuel_type"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bree_serif"
                        android:textSize="@dimen/_20sdp">

                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:text="@string/diesel"
                        android:fontFamily="@font/bree_serif"
                        android:textSize="@dimen/_20sdp">

                </TextView>
            </LinearLayout>
    </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/bree_serif"
                android:textSize="@dimen/_22sdp"
                android:textColor="@color/black"
                android:text="@string/document">

        </TextView>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"></Spinner>

        <Button
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/payment_status"
                android:textSize="@dimen/_20sdp"
                android:text="@string/upload"
                android:fontFamily="@font/bree_serif">

        </Button>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">
            <ImageView android:layout_width="@dimen/_20sdp"
                    android:id="@+id/mer"
                    android:src="@drawable/check"
                    android:layout_height="@dimen/_20sdp"/>

            <TextView
                    android:text="@string/with_driver"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:textSize="@dimen/_22sdp"/>

        </LinearLayout>
        <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/ok"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/merchant_upload_btn"
                android:textSize="@dimen/_20sdp"
                android:text="@string/upload"
                android:fontFamily="@font/bree_serif">

        </Button>



    </LinearLayout>
    <ImageView

            android:id="@+id/img_close"
            android:layout_width="@dimen/_25sdp"
            android:src="@mipmap/close"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/_25sdp"/>

</RelativeLayout>