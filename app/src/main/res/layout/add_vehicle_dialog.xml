    <LinearLayout
            android:layout_below="@+id/lnr_day_wise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_payment_history"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/layout_truck_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/bree_serif"
                    android:text="@string/truck_quantity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/minus_quantity"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/button_add"
                        android:padding="@dimen/_5sdp"
                        android:src="@mipmap/minus" />

                <TextView
                        android:id="@+id/item_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/itemquantity_bg"
                        android:fontFamily="@font/bree_serif"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/one"
                        android:textColor="@color/black" />

                <ImageView
                        android:id="@+id/add_quantity"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/button_minus"
                        android:padding="@dimen/_5sdp"
                        android:src="@mipmap/plus" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="100"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="50"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:fontFamily="@font/bree_serif"
                        android:text="@string/booking_price_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp">

                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:fontFamily="@font/bree_serif"
                        android:text="@string/booking_price"
                        android:textSize="@dimen/_20sdp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_weight="50"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:fontFamily="@font/bree_serif"
                        android:text="@string/fuel_type"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp">

                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:fontFamily="@font/bree_serif"
                        android:text="@string/diesel"
                        android:textSize="@dimen/_20sdp">

                </TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/bree_serif"
                android:text="@string/document"
                android:textColor="@color/black"
                android:textSize="@dimen/_22sdp">

        </TextView>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"></Spinner>

        <Button
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/payment_status"
                android:fontFamily="@font/bree_serif"
                android:text="@string/upload"
                android:textSize="@dimen/_20sdp">

        </Button>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/mer"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/check" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/with_driver"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold" />

        </LinearLayout>

        <Button
                android:id="@+id/merchant_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ok"
                android:fontFamily="@font/bree_serif"
                android:text="@string/upload"
                android:textSize="@dimen/_20sdp">

        </Button>


    </LinearLayout>



</RelativeLayout>