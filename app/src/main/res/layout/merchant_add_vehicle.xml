<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/merchant_truck_scroll"
        android:layout_below="@+id/toolbar">
<LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/toolbar"
            android:id="@+id/toolbar" />


    <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/select_category_text"
            android:textSize="18sp"
            android:fontFamily="@font/bree_serif"
            android:text="Select Category">

    </TextView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

    <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="30dp" />
        <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:src="@mipmap/expand">

        </ImageView>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/select_subcategory_text"
            android:text="Select Sub Category"
            android:fontFamily="@font/bree_serif">

    </TextView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

    <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="30dp"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:src="@mipmap/expand">
        </ImageView>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_add_veichle"
            android:layout_below="@+id/ed_search"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            app:spanCount="3"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:id="@+id/layout_vehicle_not_found"
            android:layout_below="@+id/ed_search"
            android:layout_height="match_parent">


        <ImageView android:layout_width="@dimen/_200sdp"
                android:src="@mipmap/truck"
                android:layout_height="@dimen/_200sdp"/>

        <TextView android:layout_width="wrap_content"
                android:text="No Result Found"
                android:id="@+id/tv_no_result"
                android:fontFamily="@font/bree_serif"
                android:textColor="#000"
                android:textSize="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                android:text="@string/vehicle_not_available"
                android:fontFamily="@font/bree_serif"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"/>

        <Button android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/notify_admin"
                android:text="Notify Admin"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/bree_serif"
                android:textAllCaps="false"
                android:background="@drawable/button_save"
                android:layout_height="@dimen/_40sdp"/>

    </LinearLayout>
</LinearLayout>
    </ScrollView>
