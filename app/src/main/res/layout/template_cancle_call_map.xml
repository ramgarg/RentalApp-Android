<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/button_dialog_background"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_name_map"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="@string/name"
        style="@style/LargeTextViewStyle"/>

    <TextView
        android:id="@+id/tv_user_type"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@+id/tv_name_map"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:text="@string/merchant"
        style="@style/SmallTextViewStyle"/>

    <ImageView
        android:id="@+id/btn_call_map"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_37sdp"
        android:src="@mipmap/call"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"/>
    <ImageView
        android:id="@+id/cancle_trip_map"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_37sdp"
        android:src="@mipmap/cancel"
        android:layout_toStartOf="@+id/btn_call_map"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

</RelativeLayout>