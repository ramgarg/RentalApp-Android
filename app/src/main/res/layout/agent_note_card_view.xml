<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/calender_bg"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_10sdp"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
                android:id="@+id/tv_note_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                style="@style/AgentBoldTextCard"
                />
        <TextView
                android:id="@+id/tv_note_desc"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/tv_note_title"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="@string/date_of_birth"
                style="@style/AgentSmallTextCard"
                />
 <ImageView
         android:layout_width="@dimen/_25sdp"
         android:layout_height="@dimen/_25sdp"
         android:layout_alignParentEnd="true"
         android:layout_marginTop="@dimen/_5sdp"
         android:layout_marginEnd="@dimen/_5sdp"
         android:layout_alignParentTop="true"
         android:id="@+id/img_edit_note"
         android:src="@mipmap/edit">

 </ImageView>
        <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                android:id="@+id/img_delet_note"
                android:src="@mipmap/delete">

        </ImageView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>