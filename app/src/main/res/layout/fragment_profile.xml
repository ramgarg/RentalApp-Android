<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:background="@mipmap/bg_profile"
                  android:layout_height="@dimen/_150sdp"></LinearLayout>

    <ImageView android:layout_width="@dimen/_80sdp"
               android:id="@+id/profile_img"
               android:layout_marginTop="@dimen/_100sdp"
               android:layout_centerHorizontal="true"
               android:src="@mipmap/profile_pic"
               android:layout_height="@dimen/_80sdp"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_user_name"
              android:text="Fathi Asfour"
              android:fontFamily="@font/bree_serif"
              android:textColor="#000"
              android:textSize="@dimen/_15sdp"
              android:layout_marginTop="@dimen/_20sdp"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/profile_img"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_user_type"
              android:text="Customer"
              android:textSize="@dimen/_12sdp"
    android:fontFamily="@font/bree_serif"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/tv_user_name"
    android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/layout_email"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/tv_user_type"
            android:orientation="horizontal"
            android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="@dimen/_25sdp"
                   android:src="@mipmap/mail"
                   android:layout_height="@dimen/_25sdp"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="#000"
                  android:fontFamily="@font/bree_serif"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:text="fathi.asfour@gmail.com"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_below="@+id/layout_email"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="@dimen/_25sdp"
                   android:src="@mipmap/call"
                   android:layout_height="@dimen/_25sdp"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="#000"
                  android:fontFamily="@font/bree_serif"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:text="+966-000-000-0000"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/layout_company"
            android:layout_below="@+id/layout_phone"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="@dimen/_25sdp"
                   android:src="@mipmap/company"
                   android:layout_height="@dimen/_25sdp"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="#000"
                  android:fontFamily="@font/bree_serif"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:text="Rental Company"
                  android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/layout_address"
            android:layout_below="@+id/layout_company"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="@dimen/_25sdp"
                   android:src="@mipmap/location"
                   android:layout_height="@dimen/_25sdp"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="#000"
                  android:fontFamily="@font/bree_serif"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:text="Downtown, Dubai, United Arab Emirates"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_marginLeft="@dimen/_20sdp"
              android:gravity="center"
              android:layout_below="@+id/layout_address"
              android:layout_marginRight="@dimen/_20sdp"
              android:text="We denounce with righteous indignation and dislike men who are so beguiled."
              android:fontFamily="@font/bree_serif"
              android:textSize="@dimen/_12sdp"
              android:layout_marginTop="@dimen/_20sdp"
              android:layout_marginBottom="@dimen/_10sdp"
              android:layout_centerHorizontal="true"
              android:layout_height="wrap_content"/>
</RelativeLayout>
</ScrollView>