<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="match_parent">

        <TextView android:layout_width="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/tv_select_vehicles"
                android:text="@string/vehicle"
                android:layout_gravity="center"
                style="@style/DocumentTextView"
                android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/btn_select_vehicles"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/bree_serif"
            android:textSize="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_green"
            android:text="@string/view_all_"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_select_vehicles"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/merchant_rec_veichle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>



</RelativeLayout>