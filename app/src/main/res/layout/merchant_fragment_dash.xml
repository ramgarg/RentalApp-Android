<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/merchant_dash_back"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="100"
            android:orientation="horizontal">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_marginLeft="15dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

    <TextView
            android:text="Hi, Bilad"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/merchant_user_name"
            android:layout_width="100dp"
            android:textSize="25sp"
            android:layout_height="30dp"/>

    <TextView
            android:text="Let's get work done."
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

        <ImageView android:layout_width="@dimen/_80sdp"
                android:layout_weight="20"
                android:layout_marginTop="10dp"
                android:id="@+id/merchant_img_profile"
                android:src="@mipmap/profile_pic"
                android:layout_height="@dimen/_80sdp"/>
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_corner_back"
        android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/mdtp_transparent_black"
            android:textSize="18sp"
            android:text="Total Bookings">
    </TextView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="105"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="35"
                android:orientation="vertical"
                android:background="@drawable/dash_ui_button">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Completed"
                    android:textColor="@color/mdtp_transparent_black">
            </TextView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="40sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/mdtp_transparent_black"
                    android:text="32">

            </TextView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="35"
                android:orientation="vertical"
                android:background="@drawable/dash_ui_button2">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="In Progress"
                    android:textColor="@color/mdtp_transparent_black">
            </TextView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="40sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/mdtp_transparent_black"
                    android:text="14">

            </TextView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="35"
                android:orientation="vertical"
                android:background="@drawable/dash_ui_button3">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Rejected"
                    android:textColor="@color/mdtp_transparent_black">
            </TextView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="40sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/mdtp_transparent_black"
                    android:text="05">

            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</RelativeLayout>