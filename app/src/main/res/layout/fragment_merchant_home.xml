<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView android:layout_width="@dimen/_80sdp"
                android:id="@+id/profile_img"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_gravity="center"
                android:src="@mipmap/truck"
                android:layout_height="@dimen/_80sdp"/>

        <TextView android:layout_width="wrap_content"
                android:id="@+id/tv_user_name"
                android:text="Hello this is \n demo home page for merchant....\n Thank you!!"
                android:layout_gravity="center"
                android:fontFamily="@font/bree_serif"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/profile_img"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--app:spanCount="3"-->
    <!--app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/merchant_rec_veichle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:visibility="gone"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="center"
            android:src="@drawable/add_green"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:maxImageSize="65dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="100dp"
            android:clickable="true"
            android:id="@+id/merchant_add_vehicle_btn"
            app:backgroundTint="@null"
            app:fabSize="normal">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</RelativeLayout>