<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                android:background="@mipmap/bg_profile"
                android:layout_height="@dimen/_150sdp">

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile_img"

                android:layout_marginTop="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                style="@style/profile_pic"
                />

        <!--<ImageView android:layout_width="@dimen/_80sdp"
                android:id="@+id/profile_img"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/profile_pic"
                android:layout_height="@dimen/_80sdp"
                />-->

        <TextView android:layout_width="wrap_content"
                android:id="@+id/tv_merchant_name"
                android:fontFamily="@font/bree_serif"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profile_img"
                android:layout_height="wrap_content"
                />

        <TextView android:layout_width="wrap_content"
                android:id="@+id/tv_user_type"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/bree_serif"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_merchant_name"
                android:layout_height="wrap_content"
                />

        <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/layout_email"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_below="@+id/tv_user_type"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView android:layout_width="@dimen/_25sdp"
                    android:src="@mipmap/mail"
                    android:layout_height="@dimen/_25sdp"/>

            <TextView android:layout_width="wrap_content"
                    android:id="@+id/merchant_email"
                    android:textSize="@dimen/_15sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bree_serif"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content"

                    />

        </LinearLayout>
        <LinearLayout
                android:id="@+id/layout_phone"
                android:layout_below="@+id/layout_email"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView android:layout_width="@dimen/_25sdp"
                    android:src="@mipmap/call"
                    android:layout_height="@dimen/_25sdp"/>

            <TextView
                    android:id="@+id/merchant_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

        </LinearLayout>

        <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/layout_address"
                android:layout_below="@+id/layout_phone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <ImageView android:layout_width="@dimen/_25sdp"
                    android:src="@mipmap/location"
                    android:layout_height="@dimen/_25sdp"/>

            <TextView android:layout_width="wrap_content"
                    android:id="@+id/merchant_address"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bree_serif"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center"
                android:layout_below="@+id/layout_address"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/we_denounce"
                android:fontFamily="@font/bree_serif"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</ScrollView>