<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/agent_layout_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView android:layout_width="@dimen/_80sdp"
            android:id="@+id/agent_profile_img_menu"
            android:src="@mipmap/profile_pic"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_height="@dimen/_80sdp"/>

    <TextView
            android:text="@string/bilad_al"
            android:fontFamily="@font/bree_serif"
            android:textColor="@color/black"
            android:id="@+id/agent_user_name_menu"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_below="@id/agent_profile_img_menu"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="@string/agent"
            android:id="@+id/agent_user_type_menu"
            android:fontFamily="@font/bree_serif"
            android:textColor="@color/text_green"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_below="@id/agent_user_name_menu"
            android:layout_height="wrap_content"/>

    <ImageView android:layout_width="@dimen/_30sdp"
            android:id="@+id/agent_edit_profile_menu"
            android:src="@mipmap/edit"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@id/agent_user_name_menu"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/_30sdp"/>

</RelativeLayout>