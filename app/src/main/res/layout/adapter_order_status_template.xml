<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_order"
                    android:layout_height="wrap_content">


                <TextView android:layout_width="match_parent"
                        android:text="@string/truck"
                        android:id="@+id/tv_order_product_name"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bree_serif"
                        android:layout_height="wrap_content"/>

                <TextView android:layout_width="@dimen/_55sdp"
                        android:text="@string/booking_price_text"
                        android:textColor="@color/black"
                        android:id="@+id/booking_title"
                        android:layout_below="@+id/tv_order_product_name"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/bree_serif"
                        android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                        android:id="@+id/tv_order_booking_price"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bree_serif"
                        android:textSize="@dimen/_24sdp"
                        android:text="@string/booking_price"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/booking_title"
                        android:layout_below="@+id/tv_order_product_name"
                        android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                        android:id="@+id/per_hour"
                        android:fontFamily="@font/bree_serif"
                        android:textSize="@dimen/_12sdp"
                        android:text="@string/per_hour"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/tv_order_booking_price"
                        android:layout_below="@+id/tv_order_product_name"
                        android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:layout_below="@id/per_hour"
                            android:id="@+id/order_rate_review"
                            android:fontFamily="@font/bree_serif"
                            android:background="@drawable/button_gradient"
                            android:visibility="invisible"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/rate_amp_review"
                            android:textColor="@color/white"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="@dimen/_20sdp"/>

                <RelativeLayout
                        android:layout_below="@+id/tv_order_booking_price"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView android:layout_width="wrap_content"
                            android:text="@string/quantity"
                            android:id="@+id/text_quantity"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                            android:text="@string/truck_quantity"
                            android:id="@+id/tv_order_quantity"
                            android:layout_toEndOf="@id/text_quantity"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/bree_serif"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/tv_payment_status"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/button_gradient"
                            android:fontFamily="@font/bree_serif"
                            android:paddingLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/payment_pending"
                            android:textColor="@color/white" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout

                    android:layout_width="match_parent"
                    android:background="@drawable/button_order_id"
                    android:layout_height="@dimen/_50sdp">

                <TextView
                        android:text="@string/orderid"
                        android:id="@+id/tv_order_id"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/bree_serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>