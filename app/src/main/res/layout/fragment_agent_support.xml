<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/support"
                android:id="@+id/support_img"
                android:layout_marginTop="@dimen/_10sdp">

        </ImageView>
        <TextView
                style="@style/DocumentTextView"
                android:text="@string/lorem_ipsum"
                android:id="@+id/tv_support_title"
                android:layout_below="@+id/support_img"
                android:layout_marginTop="@dimen/_10sdp">

        </TextView>
        <EditText
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/tv_support_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/search"
                android:hint="@string/title"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/ed_support_title"
                />

        <EditText
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/ed_support_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:inputType="textMultiLine"
                android:lines="8"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/search"
                android:hint="@string/description"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/ed_support_desc"
                />

        <Button android:layout_width="match_parent"
                android:text="@string/submit_request"
                android:id="@+id/support_btn_submit"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@+id/ed_support_desc"
                android:textColor="#fff"
                android:fontFamily="@font/bree_serif"
                android:textAllCaps="false"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/button_gradient"
                android:layout_height="@dimen/_40sdp"/>
    </RelativeLayout>
</ScrollView>