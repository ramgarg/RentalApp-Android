<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="@dimen/_10sdp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout

            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:background="@drawable/button_payment_history"
            android:layout_height="wrap_content">


        <TextView android:layout_width="wrap_content"
                  android:text="Payment Pending"
                  android:paddingRight="@dimen/_10sdp"
                  android:paddingLeft="@dimen/_10sdp"
                  android:background="@drawable/payment_pending"
                  android:layout_marginRight="@dimen/_10sdp"
                  android:id="@+id/payment_status"
                  android:textColor="#fff"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="@dimen/_20sdp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="$150"
                  android:paddingRight="@dimen/_10sdp"
                  android:paddingLeft="@dimen/_10sdp"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/_10sdp"
                  android:id="@+id/tv_payment"
                  android:textColor="#0f7e31"
                  android:textSize="@dimen/_20sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Order ID- 27737888776"
                  android:id="@+id/order_id"
                  android:textColor="#000"
                  android:layout_below="@+id/payment_status"
                  android:layout_centerVertical="true"
                  android:textSize="@dimen/_12sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:text="02 Feb 2020"
                  android:id="@+id/tv_date"
                  android:layout_below="@+id/order_id"
                  android:layout_centerVertical="true"
                  android:textSize="@dimen/_12sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/order_id"
                android:src="@mipmap/paypal"
                android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"/>


    </RelativeLayout>


</LinearLayout>