<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/button_payment_history"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@mipmap/logo"
            android:scaleType="fitXY"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"/>

    <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:fontFamily="@font/bree_serif"
            android:text="Choose to login as,"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout

            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/dialog_transparent"
            android:layout_height="@dimen/_50sdp">
        <TextView android:layout_width="200.00dp"
                android:text="@string/customer"
                android:fontFamily="@font/bree_serif"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_customer_inactive"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:gravity="center"
                android:paddingRight="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@mipmap/customer_inactive_m"
                android:layout_height="@dimen/_50sdp"/>
        <RelativeLayout
                android:visibility="gone"
                android:id="@+id/btn_customer_active"
                android:layout_width="200dp"
                android:layout_height="180.00dp">

            <TextView android:layout_width="200.00dp"
                    android:text="@string/customer"
                    android:fontFamily="@font/bree_serif"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:background="@drawable/shadow"
                    android:drawableLeft="@mipmap/customer_active"
                    android:layout_height="@dimen/_50sdp"/>
            <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/green_check"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout

            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/dialog_transparent"
            android:layout_height="@dimen/_50sdp">
        <TextView android:layout_width="200.00dp"
                android:text="@string/agent"
                android:fontFamily="@font/bree_serif"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_agent_inactive"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:gravity="center"
                android:paddingRight="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@mipmap/customer_inactive_m"
                android:layout_height="@dimen/_50sdp"/>
        <RelativeLayout
                android:visibility="gone"
                android:id="@+id/btn_agent_active"
                android:layout_width="200dp"
                android:layout_height="180.00dp">

            <TextView android:layout_width="200.00dp"
                    android:text="@string/agent"
                    android:fontFamily="@font/bree_serif"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:background="@drawable/shadow"
                    android:drawableLeft="@mipmap/customer_active"
                    android:layout_height="@dimen/_50sdp"/>
            <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/green_check"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout

            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dialog_transparent"
            android:layout_height="@dimen/_50sdp">
        <TextView android:layout_width="200.00dp"
                android:text="@string/merchant"
                android:fontFamily="@font/bree_serif"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_merchant_inactive"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:gravity="center"
                android:paddingRight="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@mipmap/customer_inactive_m"
                android:layout_height="@dimen/_50sdp"/>
        <RelativeLayout
                android:visibility="gone"
                android:id="@+id/btn_merchant_active"
                android:layout_width="200dp"
                android:layout_height="180.00dp">

            <TextView android:layout_width="200.00dp"
                    android:text="@string/merchant"
                    android:fontFamily="@font/bree_serif"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:background="@drawable/shadow"
                    android:drawableLeft="@mipmap/customer_active"
                    android:layout_height="@dimen/_50sdp"/>
            <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/green_check"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"/>
        </RelativeLayout>
    </RelativeLayout>

    </LinearLayout>
    <ImageView

            android:id="@+id/img_close"
            android:layout_width="@dimen/_25sdp"
            android:src="@mipmap/close"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/_25sdp"/>
</RelativeLayout>
