<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        >
    <RelativeLayout

            android:layout_width="@dimen/_200sdp"
            android:orientation="vertical"
            android:background="@drawable/button_order"
            android:layout_height="wrap_content">
           <CheckBox
                   android:id="@+id/chkbox_assign_merchnat"
                   android:layout_width="@dimen/_30sdp"
                   android:layout_height="@dimen/_30sdp"/>

            <ImageView android:layout_width="@dimen/_60sdp"
                    android:id="@+id/customer_profile_pic"
                    android:src="@mipmap/profile_pic"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_70sdp"/>

            <ImageView android:layout_width="@dimen/_40sdp"
                    android:id="@+id/customer_call_button"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/call"
                    android:layout_height="@dimen/_40sdp"/>

        <TextView
                style="@style/DocumentTextView"
                android:id="@+id/assign_merchant_name"
                android:textAlignment="center"
                android:layout_below="@id/customer_profile_pic"
                android:text="">

        </TextView>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:id="@+id/merchant_location"
                android:src="@mipmap/location_pick_address"
                android:layout_below="@id/assign_merchant_name">

        </ImageView>
        <TextView
                style="@style/DocumentTextView"
                android:id="@+id/merchant_distatnce"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/merchant_location"
                android:layout_below="@id/assign_merchant_name"
                android:text="@string/distance_3km">
        </TextView>


        <TextView
                style="@style/DocumentTextView"
                android:id="@+id/layout_truck_quantity"
                android:textAlignment="center"
                android:layout_below="@id/merchant_location"
                android:text="@string/truck_quantity">
        </TextView>
        <TextView android:layout_width="wrap_content"
                android:text="@string/total_price"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:id="@+id/booking_total_prcie"
                android:layout_below="@+id/layout_truck_quantity"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/bree_serif"
                android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                android:id="@+id/booking_price"
                android:textColor="@color/black"
                android:fontFamily="@font/bree_serif"
                android:textSize="@dimen/_20sdp"
                android:text="@string/booking_price"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/booking_total_prcie"
                android:layout_below="@+id/layout_truck_quantity"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/booking_price"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/minus_quantity"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:background="@drawable/button_add"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/minus"
                    android:onClick="onMinusClick"
                    />

            <TextView
                    android:id="@+id/item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:background="@drawable/itemquantity_bg"
                    android:fontFamily="@font/bree_serif"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="@string/quantity_value"
                    android:textColor="@color/black" />

            <ImageView
                    android:id="@+id/add_quantity"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:background="@drawable/button_minus"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/plus"
                    android:onClick="onPlusClick"
                    />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
