<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView android:layout_width="match_parent"
               android:scaleType="centerCrop"
               android:id="@+id/product_image"
               android:src="@mipmap/product_image"
               android:layout_height="match_parent"/>

    <include layout="@layout/toolbar"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:padding="@dimen/_20sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/product_detail"
                    android:layout_height="@dimen/_250sdp">
        <TextView android:layout_width="wrap_content"
                  android:text="Volvo FH Truck"
                  android:id="@+id/vehicle_name"
                  android:textSize="@dimen/_20sdp"
                  android:fontFamily="@font/bree_serif"
                  android:textColor="#000"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_width="@dimen/_25sdp"
                   android:layout_alignParentRight="true"
                   android:id="@+id/img_like_unlike"
                   android:src="@mipmap/like"
                   android:layout_height="@dimen/_25sdp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Booking\nPrice "
                  android:textColor="#000"
android:layout_marginTop="@dimen/_10sdp"
                  android:id="@+id/booking_title"
                  android:layout_below="@+id/vehicle_name"
                  android:textSize="@dimen/_12sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:id="@+id/booking_price"
                  android:textColor="#000"
                  android:fontFamily="@font/bree_serif"
                  android:textSize="@dimen/_20sdp"
                  android:text="$30"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:layout_toRightOf="@+id/booking_title"
                  android:layout_below="@+id/vehicle_name"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="wrap_content"
                  android:text="Per Hour"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:layout_toRightOf="@+id/booking_price"
                  android:id="@+id/per_hour"
                  android:layout_below="@+id/vehicle_name"
                  android:textSize="@dimen/_12sdp"
                  android:fontFamily="@font/bree_serif"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/view_1"
                  android:background="@android:color/darker_gray"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:layout_below="@+id/per_hour"
                  android:layout_height="1dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="3"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_below="@+id/view_1"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="Full\nPower"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:textColor="#000"
                      android:layout_marginLeft="@dimen/_5sdp"
                      android:layout_toRightOf="@+id/booking_price"
                      android:layout_below="@+id/vehicle_name"
                      android:textSize="@dimen/_15sdp"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="wrap_content"
                      android:text="FuTotal\nCapacity"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:textColor="#000"

                      android:layout_marginLeft="@dimen/_5sdp"
                      android:layout_toRightOf="@+id/booking_price"
                      android:layout_below="@+id/vehicle_name"
                      android:textSize="@dimen/_15sdp"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="wrap_content"
                      android:text="Fuel\nType"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:textColor="#000"
                      android:layout_marginLeft="@dimen/_5sdp"
                      android:layout_toRightOf="@+id/booking_price"
                      android:layout_below="@+id/vehicle_name"
                      android:textSize="@dimen/_15sdp"
                      android:fontFamily="@font/bree_serif"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
    <Button android:layout_width="match_parent"
            android:text="Next"
            android:id="@+id/btn_next"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/bree_serif"
            android:background="@drawable/button_save"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/_40sdp"/>
</RelativeLayout>