<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
                android:id="@+id/pro_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:scaleType="centerCrop"
               android:layout_marginTop="@dimen/_20sdp"
               />

    <include layout="@layout/toolbar"/>

    <RelativeLayout android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"

                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingTop="@dimen/_15sdp"

                    android:layout_above="@id/btn_next"
                    android:background="@drawable/product_detail"
                    >
        <TextView
                android:id="@+id/pro_name"

                android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                  android:text="@string/volvo_fh_truck"
                android:layout_alignParentLeft="true"
                  style="@style/AgentBoldTextCard"

                  />

        <ImageView
                android:id="@+id/pro_wish"
                android:layout_width="@dimen/_25sdp"
                   android:layout_alignParentEnd="true"
                android:onClick="onWishIconClick"

                   android:layout_height="@dimen/_25sdp"/>

        <LinearLayout
                android:id="@+id/lyt_price_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pro_name"
                android:orientation="horizontal"

                android:gravity="center"

                android:layout_marginTop="@dimen/_5sdp"
                >

        <TextView
                android:id="@+id/booking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booking_n_price"

                style="@style/AgentSmallTextCard"
                 />
        <TextView
                android:id="@+id/pro_booking_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                  android:text="@string/booking_price"
                 style="@style/AgentBoldTextCard"

                android:layout_marginLeft="@dimen/_5sdp"

                 />


        <TextView
                android:id="@+id/per_hour"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_5sdp"
                 android:text="@string/per_hour"
                style="@style/AgentSmallTextCard"
                />

        </LinearLayout>

        <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:id="@+id/view_dotted_line"
                  android:background="@drawable/dotted_line_horizon"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_below="@+id/lyt_price_details"
                  android:layerType="software"
                  />

        <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/rec_pro_details"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/view_dotted_line"

                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                >

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
    <Button android:layout_width="match_parent"
            android:text="@string/next"
            android:id="@+id/btn_next"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/bree_serif"
            android:background="@drawable/ripple"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/_40sdp"
            android:onClick="onNextButtonClick"
            />
</RelativeLayout>