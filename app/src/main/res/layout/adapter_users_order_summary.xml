<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_pic"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_4sdp"
            style="@style/profile_pic"

            />

    <LinearLayout
            android:id="@+id/lnr_name"
            android:layout_width="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/img_user_pic"
            >

        <TextView
                android:id="@+id/tv_user_name"
                android:text=""
                android:singleLine="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                android:fontFamily="@font/bree_serif"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:layout_height="wrap_content"/>

        <TextView
                android:text=""
                android:id="@+id/tv_users_role"
                android:fontFamily="@font/bree_serif"
                android:textColor="@color/mdtp_transparent_black"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"/>


    </LinearLayout>
    <include
            android:id="@+id/include_phone_view"
            layout="@layout/phone_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            />
    <TextView
            android:id="@+id/user_rating"
            android:background="@drawable/button_gradient"

            android:textColor="@color/white"
            android:fontFamily="@font/bree_serif"
            android:textSize="@dimen/_14sdp"
            android:text="@string/rate"

            android:layout_height="wrap_content"
            android:layout_width="@dimen/_70sdp"
            android:textAlignment="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

    <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_30sdp"
            android:id="@+id/img_select_driver"
            android:visibility="gone"
            android:src="@mipmap/green_check"/>

</RelativeLayout>

