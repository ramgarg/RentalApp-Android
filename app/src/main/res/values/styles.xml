<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#e7a403</item>
        <item name="colorPrimaryDark">#e7a403</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">#26c86c</item>
    </style>

    <!--dailog activity-->

    <style name="ThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/cardview_shadow_start_color</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>



    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#ffc800</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_check</item>
        <item name="android:minHeight">@dimen/_20sdp</item>
        <item name="android:maxHeight">@dimen/_40sdp</item>
    </style>
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">#6200ea</item>

    </style>
    <style name="AppThemeRatingBar" parent="Theme.AppCompat">
        <item name="ratingBarStyle">@style/MyRatingBar</item>
    </style>
    <!-- sun mon tus wed-->
    <style name="parent_days" parent="@android:style/Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shap_circle_white</item>
    </style>
    <style name="day_check_box" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="days_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/bree_serif</item>
        <!--<item name="android:paddingTop">@dimen/_5sdp</item>-->

        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>


        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <!--product details-->
    <style name="name_heading" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="booking_price" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_28sdp</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="pro_details_heading" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="pro_details_inner_heading" parent="android:Widget.TextView">
        <!--<item name="android:textColor">@color/light_grey</item>-->
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>
    <!--agent module-->

    <style name="AgentBoldTextCard" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="AgentSmallTextCard" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="AgentButtonCard" parent="android:Widget.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <!--agent home bottom below-->
    <style name="AgentOrderStatusNum" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
    </style>

    <style name="AgentOrderStatusTop" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="android:layout_gravity">top|center</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
    </style>

    <!--Linear layout style-->
    <!--<style name="AgentOrderStatusLayout" parent="ViewGroup">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">serif</item>
        <item name="android:layout_gravity">top|center</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>-->

<!--Booking Details Views Styles-->

    <style name="BookingDetailsVehicleName" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="BookingDetailsParentRelativeLayout" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="ScrollViewParent" parent="android:Widget.TextView">
        <item name="android:layout_below">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <!--Dialog Vehicle Details Views Styles-->

    <style name="AddVehicleSubmitDialog" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ok</item>

    </style>

    <style name="WithDriverCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:text">@string/with_driver</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>

    </style>

    <style name="GreyLineTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:background">@android:color/darker_gray</item>

    </style>

    <style name="DocumentUploadButton" parent="android:Widget.Button">

        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>

        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:text">@string/upload</item>

        <item name="android:textAlignment">center</item>


    </style>

    <style name="DocumentTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>

    </style>

    <style name="ToolbarTitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_60sdp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/title</item>

    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">@dimen/_35sdp</item>
        <item name="fontFamily">@font/bree_serif</item><!-- menu item height- vary as u need -->
    </style>
    <style name="BottomNavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="fontFamily">@font/bree_serif</item><!-- menu item height- vary as u need -->
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="android:background">@drawable/spinner_dropdown</item>
    </style>


<!--divider style-->

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
<!--Profile pic style-->
    <style name="profile_pic">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:src">@mipmap/profile_pic</item>

        <item name="civ_border_width">2dp</item>
        <item name="civ_border_color">#D3D3D3</item>

    </style>

    <style name="UserRole" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_green</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PaymentTextView" parent="android:Widget.TextView">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>


</resources>
