<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#e7a403</item>
        <item name="colorPrimaryDark">#e7a403</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@android:color/darker_gray</item>

        <item name="colorControlActivated">#26c86c</item>
    </style>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/cardview_shadow_start_color</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>



    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#ffc800</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_check</item>
        <item name="android:minHeight">@dimen/_20sdp</item>
        <item name="android:maxHeight">@dimen/_40sdp</item>
    </style>
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">#6200ea</item>

    </style>
    <style name="AppThemeRatingBar" parent="Theme.AppCompat">
        <item name="ratingBarStyle">@style/MyRatingBar</item>
    </style>
    <!-- sun mon tus wed-->
    <style name="days_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">serif</item>

        <item name="android:height">@dimen/_45sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

        <item name="android:background">@drawable/shap_circle_white</item>
        <item name="android:gravity">center|clip_vertical</item>

        <!-- <item name="android:shadowColor">@color/mdtp_dark_gray</item>
         <item name="android:shadowRadius">3</item>
         <item name="android:shadowDx">1</item>
         <item name="android:shadowDy">2</item>-->

    </style>
    <!--agent module-->

    <style name="AgentBoldTextCard" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">serif</item>
    </style>

    <style name="AgentSmallTextCard" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">serif</item>
    </style>

    <style name="AgentButtonCard" parent="android:Widget.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">serif</item>
    </style>

    <!--agent home bottom below-->
    <style name="AgentOrderStatusNum" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">serif</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
    </style>

    <style name="AgentOrderStatusTop" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">serif</item>
        <item name="android:layout_gravity">top|center</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
    </style>

    <!--Linear layout style-->
